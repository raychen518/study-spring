<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- The <context:component-scan> element scans the classpath for annotated -->
	<!-- components that will be auto-registered as beans. -->
	<!-- This element implicitly enables the functionality of the <context:annotation-config> -->
	<!-- element, so there is no need to include the <context:annotation-config> -->
	<!-- element when using this element. -->
	<!-- The "base-package" attribute of this element is used to specify the -->
	<!-- packages to scan. The attribute value should be -->
	<!-- a comma/semicolon/space/tab/linefeed-separated list. -->
	<context:component-scan
		base-package="com.raychen518.study.spring.core.ioccontainer.classpathscanningandcomponents.case1" />

	<bean id="beanA"
		class="com.raychen518.study.spring.core.ioccontainer.classpathscanningandcomponents.case1.BeanA" />

</beans>
